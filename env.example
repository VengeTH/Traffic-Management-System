# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=las_pinas_traffic_db
DB_USER=postgres
DB_PASSWORD=your_db_password

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_here_make_it_long_and_random
JWT_EXPIRES_IN=24h
JWT_REFRESH_SECRET=your_refresh_token_secret_here
JWT_REFRESH_EXPIRES_IN=7d

# Server Configuration
PORT=5000
NODE_ENV=development
CORS_ORIGIN=http://localhost:3000

# Email Configuration (for receipts and notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password
EMAIL_FROM=traffic@laspinas.gov.ph

# SMS Configuration (Twilio)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# Payment Gateway Configuration
# PayMongo
PAYMONGO_SECRET_KEY=pk_test_your_paymongo_secret_key
PAYMONGO_PUBLIC_KEY=pk_test_your_paymongo_public_key

# GCash
GCASH_CLIENT_ID=your_gcash_client_id
GCASH_CLIENT_SECRET=your_gcash_client_secret
GCASH_MERCHANT_ID=your_gcash_merchant_id

# Maya
MAYA_CLIENT_ID=your_maya_client_id
MAYA_CLIENT_SECRET=your_maya_client_secret
MAYA_MERCHANT_ID=your_maya_merchant_id

# DragonPay
DRAGONPAY_MERCHANT_ID=your_dragonpay_merchant_id
DRAGONPAY_PASSWORD=your_dragonpay_password
DRAGONPAY_SECRET_KEY=your_dragonpay_secret_key

# Redis Configuration (for rate limiting and caching)
REDIS_URL=redis://localhost:6379

# File Upload Configuration
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=5242880

# Security Configuration
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Application Configuration
APP_NAME="Las Pi√±as Traffic Online Payment System"
APP_URL=http://localhost:5000
FRONTEND_URL=http://localhost:3000

# Admin Default Credentials (change in production)
ADMIN_EMAIL=admin@laspinas.gov.ph
ADMIN_PASSWORD=admin123456
ADMIN_NAME="System Administrator"



